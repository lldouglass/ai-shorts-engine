# AI Shorts Engine Configuration
# Copy this file to the project root as .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://shorts:shorts@localhost:5432/shorts

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CELERY
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
# LOG_FORMAT=json  # Use "json" for production, "console" for development

# =============================================================================
# API SERVER
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# =============================================================================
# PROVIDERS
# =============================================================================

# LLM Provider for video planning
# Options: openai, anthropic, stub
LLM_PROVIDER=openai

# Video Generation Provider
# Options: luma, stub
VIDEO_GEN_PROVIDER=stub

# Video Rendering Provider
# Options: creatomate, stub
RENDERER_PROVIDER=stub

# Voiceover Provider
# Options: elevenlabs, edge_tts, stub
VOICEOVER_PROVIDER=stub

# =============================================================================
# API KEYS - Video Creation
# =============================================================================

# OpenAI (GPT-4 for planning)
# OPENAI_API_KEY=sk-...

# Anthropic (Claude for planning - alternative to OpenAI)
# ANTHROPIC_API_KEY=sk-ant-...

# Luma AI (video generation)
# LUMA_API_KEY=luma-...

# =============================================================================
# API KEYS - Rendering
# =============================================================================

# Creatomate (video composition/rendering)
# Get your API key at: https://creatomate.com/
# CREATOMATE_API_KEY=...

# Creatomate webhook URL (optional - for async render completion)
# CREATOMATE_WEBHOOK_URL=https://your-server.com/api/v1/webhooks/creatomate

# ElevenLabs (high-quality voiceover)
# Get your API key at: https://elevenlabs.io/
# ELEVENLABS_API_KEY=...

# =============================================================================
# PLATFORM PUBLISHING (future)
# =============================================================================
PUBLISHER_YOUTUBE_ENABLED=false
PUBLISHER_TIKTOK_ENABLED=false
PUBLISHER_INSTAGRAM_ENABLED=false

# YouTube API credentials
# YOUTUBE_API_KEY=...

# TikTok API credentials
# TIKTOK_CLIENT_KEY=...

# Instagram API credentials
# INSTAGRAM_ACCESS_TOKEN=...
